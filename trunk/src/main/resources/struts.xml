<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC 
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="default" extends="struts-default">
		<action name="index" class="moviesAction">
			<result type="redirect">/movie/list.action</result>
		</action>
	</package>
	
	
	
	<package name="movie" namespace="/movie" extends="struts-default">
		<default-interceptor-ref name="paramsPrepareParamsStack"/>

		<action name="list" class="moviesAction">
			<result>/jsp/movie/list.jsp</result>
		</action>
		<action name="view" class="movieAction">
			<result>/jsp/movie/view.jsp</result>
		</action>
		<action name="edit" class="movieAction">
			<result>/jsp/movie/edit.jsp</result>
		</action>
		<action name="create" class="movieAction">
			<result>/jsp/movie/create.jsp</result>
		</action>
		<action name="delete" class="movieAction" method="delete">
			<result type="redirect">/movieList.action</result>
		</action>
		<action name="update" class="movieAction" method="update">
			<result>/jsp/movie/view.jsp</result>
		</action>
	</package>



	<package name="exemple" namespace="/exemple" extends="default">
		<action name="index" class="net.dromard.movies.ExempleAction">
			<result>/jsp/exemple.jsp</result>
		</action>
		<action name="helloWorld" class="net.dromard.movies.HelloWorldAction"> 
			<result name="input">/jsp/index.jsp</result>
			<result>/jsp/helloWorld.jsp</result>
		</action>
	</package>
</struts>
